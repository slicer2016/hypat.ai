{
  "name": "hypat.ai",
  "version": "1.0.0",
  "description": "Hypat.ai is a specialized Model Context Protocol (MCP) server that transforms newsletter emails into an organized knowledge system. It's built on top of the GongRzhe/Gmail-MCP-Server and designed for knowledge workers who subscribe to multiple newsletters.",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slicer2016/hypat.ai.git"
  },
  "bugs": {
    "url": "https://github.com/slicer2016/hypat.ai/issues"
  },
  "homepage": "https://github.com/slicer2016/hypat.ai#readme",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "NODE_ENV=development node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev": "NODE_OPTIONS='--loader ts-node/esm' ts-node src/index.ts -e development -v",
    "demo": "NODE_OPTIONS='--loader ts-node/esm' ts-node src/demo.ts",
    "build": "tsc",
    "db:migrate": "node dist/index.js --migrate",
    "db:migrate:dev": "NODE_ENV=development node dist/index.js --migrate",
    "test": "jest --config=jest.config.cjs",
    "test:unit": "jest --config=jest.config.cjs \"^(?!.*integration).*\\.test\\.ts$\"",
    "test:integration": "source ./test-setup.sh && jest --config=jest.config.cjs \"src/tests/integration/.*\\.test\\.ts$\"",
    "test:coverage": "jest --config=jest.config.cjs --coverage",
    "test:integration:coverage": "source ./test-setup.sh && jest --config=jest.config.cjs \"src/tests/integration/.*\\.test\\.ts$\" --coverage",
    "test:report": "jest --config=jest.config.cjs --json --outputFile=./test-results/test-report.json",
    "lint": "eslint --ext .ts src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "newsletter",
    "gmail",
    "mcp",
    "email",
    "knowledge-base",
    "digest",
    "categorization",
    "content-processing",
    "ai",
    "newsletter-management",
    "email-processing",
    "claude",
    "anthropic"
  ],
  "author": "Vinay Sridhar <info@hypat.ai>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-syntax-flow": "^7.26.0",
    "@babel/plugin-syntax-typescript": "^7.25.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@types/cron": "^2.0.1",
    "@types/jest": "^29.5.10",
    "@types/luxon": "^3.6.2",
    "@types/mjml": "^4.7.4",
    "@types/mjml-react": "^2.0.10",
    "@types/node": "^22.14.1",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@gongrzhe/server-gmail-autoauth-mcp": "github:GongRzhe/Gmail-MCP-Server",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "app-root-path": "^3.1.0",
    "better-sqlite3": "^11.9.1",
    "commander": "^13.1.0",
    "cron": "^4.3.0",
    "dotenv": "^16.5.0",
    "knex": "^3.1.0",
    "luxon": "^3.6.1",
    "mjml": "^4.15.3",
    "mjml-react": "^2.0.8",
    "nodemailer": "^6.10.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  }
}

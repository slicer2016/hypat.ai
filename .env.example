# Hypat.ai Environment Configuration

# Environment (development, test, production)
NODE_ENV=development

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_FILENAME=./data/database.sqlite
DATABASE_MIGRATE=true
DATABASE_DEBUG=false

# Email Configuration
EMAIL_TRANSPORT=mock
EMAIL_SENDER_ADDRESS=digests@hypat.ai
EMAIL_REPLY_TO=no-reply@hypat.ai

# SMTP Configuration (if EMAIL_TRANSPORT=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=your-password
SMTP_SECURE=false

# MCP Configuration
MCP_MOCK_GMAIL=true
MCP_PORT=8080
MCP_HOST=localhost

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/hypat.log
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORIZE=true

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000